<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tiangong.chargingPile.activity.OneKeyTestReportActivity">

    <RelativeLayout
        android:background="@color/ThemeColor"
        android:layout_width="match_parent"
        android:layout_height="117px">
        <ImageView
            android:padding="24px"
            android:id="@+id/img_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_white"
            android:layout_marginLeft="54px"
            android:layout_width="117px"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/colorWhite"
            android:text="一键检测报告"
            android:layout_centerInParent="true"
            android:textSize="54px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        app:tabMode="fixed"
        app:tabTextColor="@color/color666"
        android:background="@color/colorWhite"
        app:tabSelectedTextColor="@color/ThemeColor"
        app:tabIndicatorColor="@color/ThemeColor"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        android:id="@+id/oneKey_test_report_tab"
        app:tabMaxWidth="645px"
        app:tabIndicatorHeight="12px"
        android:layout_width="match_parent"
        android:layout_height="120px">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/oneKey_test_report_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>
